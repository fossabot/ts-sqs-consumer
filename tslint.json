{
  "extends": [
    "tslint-microsoft-contrib",
    "tslint-no-unused-expression-chai"
  ],
  "rules": {
    "no-relative-imports": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "max-classes-per-file": true,
    "no-unnecessary-class": [
      true,
      "allow-static-only"
    ],
    "completed-docs": [
      true,
      "classes",
      "enums",
      "functions",
      "interfaces",
      "methods",
      "namespaces",
      "types"
    ],
    "interface-name": true,
    "no-implicit-dependencies": [true, "dev"]
  }
}
